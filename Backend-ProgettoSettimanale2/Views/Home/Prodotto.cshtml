@model ScarpaDetails
@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<h3>Dettagli Prodotto</h3>

<div class="d-flex">
    <img src="@Model.UrlCopertina" class="w-25"/>
    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">Rimuovi prodotto</a>
    <div class="d-flex flex-column">
        <div class="d-flex justify-content-between">
            <h4>@Model.Marca</h4>
            <p>€ @Model.Prezzo</p>
        </div>
        <p>@Model.Modello</p>
        <p>@Model.Descrizione</p>
        <div class="d-flex">
            @foreach(var img in Model.Immagini)
            {
                <img src="@img.Url" class="w-25" />
            }
        </div>
    </div>
    
</div>
