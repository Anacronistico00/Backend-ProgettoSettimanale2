@model ScarpeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="">BestSellers</h1>
    <p class="lead">Le scarpe più vendute del momento</p>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-3">
        @for (int i = 0; i < 6; i++)
        {
            var scarpa = Model.Scarpe[i];
            <div>
                <div class="card my-3">
                    <img src="@scarpa.UrlCopertina" class="card-img-top" alt="@scarpa.Modello">
                    <div class="card-body">
                        <h5 class="card-title">@scarpa.Marca</h5>
                        <p class="card-text">@scarpa.Modello</p>
                        <p class="card-text">€ @scarpa.Prezzo.ToString("C")</p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-end mb-2">
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Prodotto" asp-route-id="@scarpa.Id">Dettagli</a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
